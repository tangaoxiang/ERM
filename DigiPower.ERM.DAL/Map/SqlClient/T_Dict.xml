    <update id="Update" parameterClass="T_Dict">
      UPDATE [dbo].[T_Dict] SET
      [KeyWord] = #KeyWord,dbType=NVarChar#
      , [DisplayName] = #DisplayName,dbType=NVarChar#
      , [ValueName] = #ValueName,dbType=NVarChar#
      , [OrderIndex] = #OrderIndex,dbType=Int#
      WHERE
